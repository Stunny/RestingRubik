      input(type='text', name='author')
      |       URL:    
      input(type='url', name='url')
      |       Parts:  
      input(type='number', name='parts')
      |       Format: 
      select(name='format')
        option(selected='') Video
        |                 
        option Blog
      |       
      input(type='submit', value='POST')
